---
import SEO from "./SEO.astro";
import KeepScrolling from "../../public/images/keep-scrolling.svg";
---

<html lang="es">
  <SEO/>
  <body>
    <slot />
    <KeepScrolling id="keep-scrolling" class="fixed bottom-3 right-0 left-0 mx-auto drop-shadown-2xl animate-bounce text-gray-400"/>
    <div id="content"class="flex items-center justify-center">
      <slot name="after" />
    </div>
  </body>
</html>

<style is:global>
	html,
	body {
    background: #111111;
		height: 300vh;
    overflow-x: hidden;
    overscroll-behavior: none;
    color: white;
    margin: 0;
    width: 100%;
	}

  #content {
    position: absolute;
    z-index: 0;
    top: 260vh;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @media (max-width: 1024px) { 
    #content {
      top: 253vh;
    }
  }
</style>


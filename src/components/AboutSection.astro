---
import { INSTAGRAM_INFO } from "@/constants/global";
import LinkButton from "./LinkButton.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
---

<section class="text-center">
  <h2 class="text-2xl font-bold animate-pulse">Tu pasión, inmortalizada</h2>
  <p class="text-gray-400">Fotógrafo deportivo</p>
  <div class="p-4 flex flex-wrap justify-center gap-4">
    <LinkButton
      href={INSTAGRAM_INFO.url}
      title={INSTAGRAM_INFO.name}
      target="_blank"
      customClass="bg-gray-800 hover:bg-gray-700"
    >
      <INSTAGRAM_INFO.icon slot="before" />
      @{INSTAGRAM_INFO.username}
    </LinkButton>
  </div>
</section>

